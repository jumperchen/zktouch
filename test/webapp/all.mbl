		<m:controlgroup type="checkbox" text="Choose as many fruits as you'd like:" label="fruit-choice">
			<m:controlgroupitem>Banana</m:controlgroupitem>
			<m:controlgroupitem>Apple</m:controlgroupitem>
			<m:controlgroupitem>Guava</m:controlgroupitem>
			<m:controlgroupitem>Watermelon</m:controlgroupitem>
		</m:controlgroup>
		
