		</m:controlgroup>
		
		<m:textinput class="textinput" label="password" type="password" text="password:"/>
		<m:textinput class="textinput" label="date" type="date" text="date:"/>
		<m:textinput class="textinput" label="number" type="number" text="number:"/>
		<m:textinput class="textinput" label="color" type="color" text="color:"/>
		
		<m:footer theme="b" label="Powered by 程序員" />
	
