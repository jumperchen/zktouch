<zk xmlns:m="http://www.zkoss.org/2012/mobile" 
	xmlns:zul="zul" xmlns:h="html" xmlns:w="client" >
	
	<m:style>
		.textinput label {
			display: inline-block;
			width: 20%;
			margin: 0 2% 0 0;
		}
		.ui-overlay-shadow {
			box-shadow:none;
		}
	</m:style>
	
	<m:view id="view1" active="true" title="2012軟體創作達人暑期成長營期中報告 - Powered by 程序員">

